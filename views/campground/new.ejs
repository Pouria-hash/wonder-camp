<% layout('layouts/boilerplat') %>

    
    <div class="row">
        <h1 class="text-center">Creat New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campground" method="POST" novalidate enctype="multipart/form-data" class="validation-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Camp title</label>
                    <input class="form-control" type="text" name="title" id="title" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please type a valid title.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Camp location</label>
                    <input class="form-control" type="text" name="location" id="location" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image Url">Image</label>
                    <input class="form-control" type="url" name="image" id="image" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="number" name="price" class="form-control" placeholder="0.00" aria-label="price"
                            required>
                    </div>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea name="description" class="form-control" id="description" cols="30" rows="5"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success px-5 py-2">submit</button>
                </div>
            </form>
            <a href="/campground">Back to campground</a>
        </div>
    </div>