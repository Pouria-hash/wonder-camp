<% layout('./layouts/boilerplat') %>

    <div class="row d-flex justify-content-center aligen-items-center">
        <div class="col-md-6 col-xl-4">
            <div class="card shadow mb-5">
                <img class="card-img-top"
                    src="https://images.unsplash.com/photo-1551303174-2b0eb4ab8cef?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1567&q=80"
                    alt="">
                <div class="p-3">
                    <h1>Login Form</h1>
                    <form action="/login" method="POST" class="validation-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" autofocus name="username" id="username" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <div class="invalid-feedback">
                                Please type a valid Username.
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password" required>
                                <div class="valid-feedback">
                                    Looks Good!
                                </div>
                                <div class="invalid-feedback">
                                    Please type a valid password.
                                </div>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success mt-3">Log In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>